@model EmployeeManage.ViewModels.Responses.ItemsDataListsResponseVM
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Edit Items Page</title>
</head>
<body>
    <div class="box-header with-border">
        <h3 class="box-title">Edit Items</h3>
    </div>
    <div class="box box-default">
        <!-- /.box-header -->
        <div class="box-body">
            <form enctype="multipart/form-data" asp-controller="Home" asp-action="update" method="post" class="m-3">
                @Html.HiddenFor(model => model.ItemId)



                <div class="form-group row">
                    <label asp-for="ItemId" class="col-sm-2 form-label">Item</label>
                    <div class="col-md-4">
                        @Html.DropDownList("ItemId", Model.ItemsList as SelectList, new { @class = "form-control select2  " })
                        @Html.ValidationMessageFor(x => x.ItemId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="ItemGroupId" class="col-sm-2 form-label">Group</label>
                    <div class="col-md-4">
                        @Html.DropDownList("ItemGroupId", Model.GroupList as SelectList, new { @class = "form-control select2  " })
                        @Html.ValidationMessageFor(x => x.ItemGroupId, "", new { @class = "text-danger" })
                    </div>
                </div>
                @*<div class="form-group row">
                    <label asp-for="unitOfMeasureId" class="col-sm-2 form-label">Branch</label>
                    <div class="col-md-4">
                        @Html.DropDownList("unitOfMeasureId", Model.UOMList as SelectList, new { @class = "form-control select2  " })
                        @Html.ValidationMessageFor(x => x.unitOfMeasureId, "", new { @class = "text-danger" })
                    </div>
                </div>*@

                <div class="form-group row">
                    <label asp-for="PriceId" class="col-sm-2 form-label">Price</label>
                    <div class="col-md-4">
                        <input asp-for="ItemsPrice" type="number" class="form-control" />
                        <span asp-validation-for="ItemsPrice" class="text-danger"></span>
                    </div>
                </div>

                <div class="card-footer text-center">
                    <button type="submit" class="btn btn-primary">Update</button>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary m-1">Cancel </a>
                </div>

                <div asp-validation-summary="All"></div>

            </form>
        </div>
        @section Scripts{
            <script>
                $(document).ready(function () {
                    $('.custom-file-input').on("change", function () {
                        var filename = $(this).val().split("\\").pop();
                        $(this).next('custom-file-label').html(filename);
                    });
                });
            </script>
        }
    </div>
</body>
</html>