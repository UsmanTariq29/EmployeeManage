@model EmployeeManage.ViewModels.Request.BarcodeRequest

@{
    ViewData["Title"] = "BarcodeGeneration Page";
}

@using (Html.BeginForm("BarcodeIndex", "Barcode", FormMethod.Post))
{
    @if (TempData["Success"] != null)
    {
        <p class="alert alert-success" id="successMessage">@TempData["Success"]</p>
    }
    <div class="form-group row">

        <label asp-for="ItemId" class="col-sm-2 form-label">Items</label>
        <div class="col-md-4">
            @Html.DropDownList("ItemId", Model.ItemsList as SelectList, new { @class = "form-control select2 "})
            @Html.ValidationMessageFor(x => x.ItemId, "", new { @class = "text-danger" })
            <span asp-validation-for="ItemId" class="text-danger"></span>
        </div>
    </div>
    <input type="submit" value="Generate Barcode" />
}
<br />
